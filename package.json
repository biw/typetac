{
  "name": "typetac",
  "version": "0.1.1",
  "description": "Tachyons in TypeScript",
  "main": "src/index.ts",
  "repository": "https://github.com/biw/typetac",
  "author": "Ben Williams <ben@biwills.com>",
  "license": "MIT",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "_base_lint": "yarn eslint --config \".eslintrc.js\" ",
    "ci:lint": "yarn _base_lint \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "lint": "yarn _base_lint \"src/**/*.{ts,tsx,js,jsx,json,md}\" --fix",
    "precommit-lint": "yarn _base_lint --fix",
    "test": "jest",
    "build": "tsc",
    "prepare": "yarn build",
    "np": "np"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@typescript-eslint/eslint-plugin": "^4.24.0",
    "@typescript-eslint/parser": "^4.24.0",
    "eslint": "^7.26.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.2",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^11.0.0",
    "np": "^7.5.0",
    "prettier": "^2.3.0",
    "react": "^17.0.2",
    "ts-jest": "^26.5.6",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,js,jsx,json}": [
      "yarn precommit-lint",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": [
        "lint-staged"
      ]
    }
  }
}
